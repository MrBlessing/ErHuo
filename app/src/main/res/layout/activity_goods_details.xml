<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                style="@style/main_statusBar">
                <RelativeLayout
                    android:id="@+id/goods_details_back"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/back"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/up_background_Text"
                        android:text="商品详情"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>


            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_goods_details_card"/>

                <RelativeLayout
                    android:layout_width="220dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cut_line"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="商品详情"
                        android:layout_centerInParent="true"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="商品分类"/>

                        <TextView
                            android:id="@+id/goods_details_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/main_Text"
                                android:text="商品描述:"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/goods_details_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="商品发布时间"/>

                        <TextView
                            android:id="@+id/goods_details_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="想要人数"/>

                        <TextView
                            android:id="@+id/goods_details_manyLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="新旧程度自评"/>

                        <TextView
                            android:id="@+id/goods_details_howNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="交易方式"/>

                        <TextView
                            android:id="@+id/goods_details_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="交易地点"/>

                        <TextView
                            android:id="@+id/goods_details_goWhere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentStart="true"
                            android:text="是否议价"/>

                        <TextView
                            android:id="@+id/goods_details_bargain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/list_container"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/main_Text"
                                android:text="售后承诺:"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/goods_details_promiss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/main_Text" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        style="@style/Cutting_line"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/goods_details_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/mainColor">

            <TextView
                android:id="@+id/goods_details_contact_text"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/up_background_Text"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#d9383e">

            <TextView
                android:id="@+id/goods_details_wantGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/main_Text"
                android:textColor="#fff"
                android:text="想要"
                android:gravity="center"/>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
